<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Accordion (Single)"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <settings
            jcr:primaryType="cq:Widget"
            title="Settings"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <abbreviation
                    jcr:primaryType="cq:Widget"
                    defaultValue="The term that is being described"
                    fieldLabel="Abbreviation"
                    name="./abbreviation"
                    xtype="textfield"/>
                <explanation
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Eplanation"
                    name="./explanation"
                    xtype="textfield"/>
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Title"
                    name="./title"
                    xtype="textfield"/>
                <initialism
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Initialism?"
                    name="./isInitialism"
                    type="checkbox"
                    xtype="selection"/>
            </items>
        </settings>
    </items>
</jcr:root>
