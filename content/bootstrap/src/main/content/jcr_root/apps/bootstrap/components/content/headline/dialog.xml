<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Accordion (Single)"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <settings
            jcr:primaryType="cq:Widget"
            title="Settings"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <heading
                    jcr:primaryType="cq:Widget"
                    defaultValue="Headline goes here..."
                    fieldLabel="Heading"
                    name="./heading"
                    xtype="textfield"/>
                <secondaryText
                    jcr:primaryType="cq:Widget"
                    defaultValue=""
                    fieldLabel="Secondary Text"
                    name="./secondaryText"
                    xtype="textfield"/>
              <cssClass
                    jcr:primaryType="cq:Widget"
                    defaultValue="h1"
                    fieldLabel="Type"
                    name="./cssClass"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <h1
                            jcr:primaryType="nt:unstructured"
                            text="H1"
                            value="h1"/>
                        <h2
                            jcr:primaryType="nt:unstructured"
                            text="H2"
                            value="h2"/>
                        <h3
                            jcr:primaryType="nt:unstructured"
                            text="H3"
                            value="h3"/>
                        <h4
                            jcr:primaryType="nt:unstructured"
                            text="H4"
                            value="h4"/>
                        <h5
                            jcr:primaryType="nt:unstructured"
                            text="H5"
                            value="h5"/>
                        <h6
                            jcr:primaryType="nt:unstructured"
                            text="H6"
                            value="h6"/>
                        <block
                            jcr:primaryType="nt:unstructured"
                            text="Default"
                            value=""/>
                    </options>
                </cssClass>
                <htmlTagName
                    jcr:primaryType="cq:Widget"
                    defaultValue="h1"
                    fieldLabel="Display Type"
                    name="./htmlTagName"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <h1
                            jcr:primaryType="nt:unstructured"
                            text="H1"
                            value="h1"/>
                        <h2
                            jcr:primaryType="nt:unstructured"
                            text="H2"
                            value="h2"/>
                        <h3
                            jcr:primaryType="nt:unstructured"
                            text="H3"
                            value="h3"/>
                        <h4
                            jcr:primaryType="nt:unstructured"
                            text="H4"
                            value="h4"/>
                        <h5
                            jcr:primaryType="nt:unstructured"
                            text="H5"
                            value="h5"/>
                        <h6
                            jcr:primaryType="nt:unstructured"
                            text="H6"
                            value="h6"/>
                        <block
                            jcr:primaryType="nt:unstructured"
                            text="Block"
                            value="div"/>
                    </options>
                </htmlTagName>
            </items>
        </settings>
    </items>
</jcr:root>
